<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.customer.CustomerFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        >

        <View
            android:id="@+id/view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_person"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/scode_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="" />


        <RelativeLayout
            android:id="@+id/relative_name"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scode_profile"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="-16dp"
            android:background="?attr/selectableItemBackground"
            android:paddingVertical="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAME"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_birth"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_name"
            android:layout_marginStart="60dp"
            android:layout_marginTop="-60dp"
            android:layout_toEndOf="@+id/relative_name"
            android:paddingVertical="10dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YYYYMM"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_below="@+id/relative_birth"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray"/>




        <View
            android:layout_below="@+id/relative_adress"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray"/>


        <View
            android:layout_below="@+id/relative_gas_level"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray"/>

        <RelativeLayout
            android:id="@+id/relative_adress"
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_birth"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="0dp"
            android:background="?attr/selectableItemBackground"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOCATION"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative_gas_level"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_used_num_gas"
            android:layout_marginLeft="60dp"
            android:background="?attr/selectableItemBackground"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gas Level"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_gas_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LEVEL"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_used_num_gas"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_adress"
            android:layout_marginStart="60dp"
            android:layout_marginTop="-64dp"
            android:layout_toEndOf="@+id/relative_adress"
            android:background="?attr/selectableItemBackground"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Used Gas"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_used_num_gas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_price"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_gas_level"
            android:layout_marginStart="60dp"
            android:layout_marginTop="-63dp"
            android:layout_toEndOf="@+id/relative_gas_level"
            android:background="?attr/selectableItemBackground"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRICE"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="20sp" />

            </LinearLayout>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/btn_previous"
            android:layout_width="46dp"
            android:layout_height="125dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp"
            android:background="#4B9EE9"
            android:backgroundTint="#34FFFFFF"
            android:padding="16dp"
            android:src="@drawable/ic_previous" />

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="46dp"
            android:layout_height="125dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="37dp"
            android:background="#444B9EE9"
            android:backgroundTint="#34FFFFFF"
            android:padding="16dp"
            android:src="@drawable/ic_next" />

        <ImageButton
            android:id="@+id/btn_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_first"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="133dp"
            android:backgroundTint="#34FFFFFF"
            android:padding="15dp"
            android:src="@drawable/ic_down" />

        <ImageButton
            android:id="@+id/btn_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-8dp"
            android:backgroundTint="#34FFFFFF"
            android:padding="16dp"
            android:src="@drawable/ic_up" />

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-8dp"
            android:layout_marginEnd="50dp"

            android:backgroundTint="#00E24D4D"


            android:src="@drawable/ic_delete" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/scode_profile"
            android:layout_marginTop="-8dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="3dp"

            android:layout_toStartOf="@+id/btn_first"
            android:background="#05FFFFFF"
            android:padding="10dp"
            android:src="@drawable/ic_edit" />

        <View
            android:id="@+id/view4"
            android:layout_below="@id/relative_price"
            android:layout_width="wrap_content"
            android:layout_height="200dp" />

    </RelativeLayout>

</ScrollView>
