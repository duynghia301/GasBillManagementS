<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bacground_im"
    tools:context=".ui.customer.CustomerFragment">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:alpha="0.5"
        android:background="@drawable/background_edit"
        android:foregroundTint="#A67676" />

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:scaleType="fitCenter"
        android:src="@drawable/gasbgg" />

    <!-- LinearLayout for TextViews -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- LinearLayout for each label and value -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/label_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="20sp"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:lineSpacingExtra="4dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/label_birth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date of Birth"
                android:textColor="#000000"
                android:textSize="20sp"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:id="@+id/tv_birth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/label_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Address"
                android:textColor="#000000"
                android:textSize="20sp"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/label_used_num_gas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gas Used"
                android:textColor="#000000"
                android:textSize="20sp"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:id="@+id/tv_used_num_gas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/label_gas_level"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gas Level"
                android:textColor="#000000"
                android:textSize="20sp"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:id="@+id/tv_gas_level"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/label_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Price"
                android:textColor="#000000"
                android:textSize="20sp"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_previous"
        android:layout_width="46dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="#4B9EE9"
        android:backgroundTint="#34FFFFFF"
        android:padding="16dp"
        android:src="@drawable/ic_previous" />

    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="46dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="#444B9EE9"
        android:backgroundTint="#34FFFFFF"
        android:padding="16dp"
        android:src="@drawable/ic_next" />

    <ImageButton
        android:id="@+id/btn_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:backgroundTint="#34FFFFFF"
        android:padding="16dp"
        android:src="@drawable/ic_last" />

    <ImageButton
        android:id="@+id/btn_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:backgroundTint="#34FFFFFF"
        android:padding="16dp"
        android:src="@drawable/ic_first" />
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="46dp"
        android:layout_height="47dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#05FFFFFF"
        android:padding="30dp"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/ic_edit" />

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#34FFFFFF"
        android:padding="16dp"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/ic_delete" />

</RelativeLayout>
