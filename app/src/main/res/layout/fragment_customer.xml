<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.customer.CustomerFragment">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:alpha="0.5"
        android:background="@drawable/background_view"
        android:foregroundTint="#A67676" />

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:scaleType="fitCenter"
        android:src="@drawable/gasbgg" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Name: "
        android:textColor="#000000"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/tv_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginBottom="16dp"
        android:text="Ngày sinh: "
        android:textColor="#000000"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ: "
        android:textSize="23sp"
        android:textColor="#000000"

        android:layout_below="@id/tv_birth"
    android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_used_num_gas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số lượng gas đã sử dụng: "
        android:textSize="23sp"
        android:textColor="#000000"

        android:layout_below="@id/tv_address"
    android:layout_marginBottom="16dp" />
    <TextView
        android:id="@+id/tv_gas_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cấp gas: "
        android:textSize="23sp"
        android:textColor="#000000"

        android:layout_below="@id/tv_used_num_gas"
    android:layout_marginBottom="32dp" />

    <ImageButton
        android:id="@+id/btn_previous"
        android:layout_width="46dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="#4B9EE9"
        android:backgroundTint="#34FFFFFF"
        android:padding="16dp"
        android:src="@drawable/ic_previous" />

    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="46dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="#444B9EE9"
        android:backgroundTint="#34FFFFFF"
        android:padding="16dp"
        android:src="@drawable/ic_next" />

    <ImageButton
        android:id="@+id/btn_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:backgroundTint="#34FFFFFF"
        android:padding="16dp"
        android:src="@drawable/ic_last" />

    <ImageButton
        android:id="@+id/btn_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:backgroundTint="#34FFFFFF"
        android:padding="16dp"
        android:src="@drawable/ic_first" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#05FFFFFF"
        android:padding="30dp"
        android:scaleX="3"
        android:scaleY="3"
        android:src="@drawable/ic_edit" />

</RelativeLayout>
