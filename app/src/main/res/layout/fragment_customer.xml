<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.customer.CustomerFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.GasBillManagementS.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.GasBillManagementS.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên: "
        android:textSize="18sp" />

    <!-- Hiển thị địa chỉ khách hàng -->
    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ: "
        android:textSize="18sp" />

    <!-- Hiển thị số lượng gas đã sử dụng -->
    <TextView
        android:id="@+id/tv_used_num_gas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số lượng gas đã sử dụng: "
        android:textSize="18sp" />

    <!-- Hiển thị cấp gas -->
    <TextView
        android:id="@+id/tv_gas_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cấp gas: "
        android:textSize="18sp" />

    <!-- Nút di chuyển đến đầu -->
    <Button
        android:id="@+id/btn_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đến đầu" />

    <!-- Nút di chuyển đến cuối -->
    <Button
        android:id="@+id/btn_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đến cuối" />

    <!-- Nút di chuyển đến khách hàng trước -->
    <Button
        android:id="@+id/btn_previous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khách hàng trước" />

    <!-- Nút di chuyển đến khách hàng tiếp theo -->
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khách hàng tiếp theo" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/above_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="80dp"
        app:srcCompat="@drawable/ic_add" />
</LinearLayout>