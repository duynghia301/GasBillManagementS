<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape -->
    <item>
        <shape>
            <corners
                android:radius="50dp" />
            <solid android:color="#FDFDFD" />
        </shape>
    </item>

    <!-- Bitmap image -->
    <item>

        <bitmap
            android:src="@drawable/bg"
            android:gravity="center"
            android:tileMode="disabled"
            />
    </item>
</layer-list>
